<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Email address</label>
    <input type="text" class="form-control" name="postTitle" placeholder="Enter Post Title">
  </div>
  <div class="form-group">
    <label for="postContent">Post</label>
    <textarea class="form-control" name="postContent" rows="8" cols="80" placeholder="Enter Post Content"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>
